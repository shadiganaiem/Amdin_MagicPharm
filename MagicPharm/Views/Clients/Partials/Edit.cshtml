@model MagicPharm.Models.Client

<div class="row">

    <div class="row title">
        <h4 class="page-title">עריכת לקוח</h4>
    </div>

    <form id="form" method="post">
        @Html.HiddenFor(a => a.ID)

        <div class="row inputsRow">
            <div class="form-group col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <label>מס' נייד נוסף</label>
                <input class="inputStyle" name="Telephone" maxlength="10" placeholder="מספר נייד נוסף" tabindex="3" value="@Model.Telephone" />
            </div>

            <div class="form-group col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <label>מס' נייד</label>
                <input class="inputStyle" name="Phone" maxlength="10" placeholder="מספר נייד" tabindex="2" value="@Model.Phone" required />
            </div>

            <div class="form-group col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <label>שם לקוח</label>
                <input class="inputStyle" name="FullName" placeholder="שם לקוח" tabindex="1" value="@Model.FullName" required />
            </div>
        </div>


        <div class="inputsRow" style="text-align:right">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <button type="submit" class="btn-blue btn-submit">עריכה</button>
            </div>
        </div>
    </form>
</div>

<script>
    $("#form").on('submit', function (e) {
        e.preventDefault() // prevent the form's normal submission
        var dataToPost = $(this).serialize()
        $.post("/Clients/Edit", dataToPost)
            .done(function (response, status, jqxhr) {
                if (response.succ) {

                }
            })
            .fail(function (jqxhr, status, error) {
                alert(error);
            })
            .complete(function (jqxhr, status, error) {
                InitializeClientsTable();
                $('#OptionsModal').fadeOut();
            })
    })
</script>
