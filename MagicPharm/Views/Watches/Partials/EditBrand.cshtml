@model MagicPharm.Models.WatchBrand

<div class="row">
    <div class="row title">
        <h4 class="page-title">עריכת מותג</h4>
    </div>

    <form id="form" method="post">
        @Html.HiddenFor(a => a.ID)
        <div class="row inputsRow">
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label>ברקוד</label>
                    <input class="inputStyle" name="Barcode" placeholder="ברקוד" tabindex="3" value="@Model.Barcode" />
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label>רמז</label>
                    <input class="inputStyle" name="Symbol" placeholder="רמז המותג" tabindex="2" value="@Model.Symbol" />
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="form-group">
                    <label>שם המותג</label>
                    <input class="inputStyle" name="Name" placeholder="שם המותג" tabindex="1" value="@Model.Name" required />
                </div>
            </div>
        </div>

        <div class="inputsRow" style="text-align:right">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <button type="submit" class="btn-blue btn-submit">עירכה</button>
            </div>
        </div>
    </form>
</div>
<script>
    $("#form").on('submit', function (e) {
        e.preventDefault() // prevent the form's normal submission
        var dataToPost = $(this).serialize()
        $.post("/Watches/EditBrand", dataToPost)
            .done(function (response, status, jqxhr) {
                if (response.succ) {

                }
            })
            .fail(function (jqxhr, status, error) {
                alert(error);
            })
            .complete(function (jqxhr, status, error) {
                InitializeBrandsTable();
                $('#OptionsModal').fadeOut();
            })
    })
</script>
