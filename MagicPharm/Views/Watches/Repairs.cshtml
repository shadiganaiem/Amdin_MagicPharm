
@{
    ViewBag.Title = "שעונים - תיקונים";
}

<div class="row bg-title">
    <div class="row title">
        <h4 class="page-title">תיקונים </h4>
        <button class="btn-blue-secondary" onclick="GetRepairsPartial()"><span>&#43;</span> הוסף תיקון</button>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <ol class="breadcrumb">
            <li><a href="#">שעונים</a></li>
            <li class="active">תיקונים</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
            <div class="white-box">
                <table id="repairsTable" class="table table-bordered">
                    <thead>
                        <tr>
                            <th>לקוח</th>
                            <th>נייד</th>
                            <th>מותג</th>
                            <th>דגם</th>
                            <th>תאריך תיקון</th>
                            <th>תאריך החזרה</th>
                            <th>תאריך מסירה</th>
                            <th>הערות</th>
                            <th>סטטוס</th>
                            <th>#</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
        <div id="OptionsModal" class="modal">
            <div class="modal-content" style="width:45%">
                <div class="card card-user">
                    <div class="card-body">
                        <div class="author" id="popup_options">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/SiteSripts/Watches/Repairs.js"></script>
}



